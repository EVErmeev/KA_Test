			Символы.ПС,
			ПроТокен);
			
		Если НЕ Форма.CryptoProCSPУстановлен Тогда
				
			Подсказка = Новый ФорматированнаяСтрока(
				Подсказка,
				Символы.ПС,
				ПроCryptoPro);
			
		КонецЕсли;
			
	КонецЕсли;
		
	Возврат Подсказка;

КонецФункции

