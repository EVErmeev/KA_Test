															""));
	СтрокаОписания = СтрЗаменить(СтрокаОписания, "%РайонныйКоэффициент%", Форма.Объект.РайонныйКоэффициент);
	
	СтрокаОписания = СтрЗаменить(СтрокаОписания, "%РайонныйКоэффициентРФ%",
												?(Форма.Объект.ПрименятьРайонныйКоэффициент, 
