			НСтр("ru = 'не указано'"));
		КонецЕсли;
		
		Если ЗначениеЗаполнено(Результат.ОтношениеКЕНВД) Тогда
			СтрокаОписания = СтрЗаменить(СтрокаОписания, "%ОтношениеКЕНВД%",
