															НСтр("ru = 'Районный коэффициент не применяется'")));
	СтрокаОписания = СтрЗаменить(СтрокаОписания, "%РайонныйКоэффициент%",    
												?(Форма.Объект.ПрименятьРайонныйКоэффициент, 
