			Результат = ДанныеСтроки.ЭтапРедактированиеПредставление;
		КонецЕсли;
		
	Иначе
		
		Если ДанныеСтроки.ВидЭлемента = "Этап" Тогда
			
			Результат = ДанныеСтроки.Наименование;
			
		КонецЕсли;
		
	КонецЕсли;
	
